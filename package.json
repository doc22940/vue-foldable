{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "foldable component for vue.js",
  "repository": {
    "url": "ULIVZ/vue-foldable",
    "type": "git"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "test:cov": "jest --coverage packages/**/*.js && npm run lint",
    "test": "npm run lint && jest",
    "lint": "xo packages/**/*.js",
    "build": "node scripts/build.js",
    "boot": "node scripts/bootstrap.js",
    "dev": "lerna run --parallel dev",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:release": "/bin/bash docs/deploy.sh",
    "release": "yarn build && lerna publish --conventional-commits --changelog-preset angular-bitbucket"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.52",
    "@babel/preset-env": "^7.0.0-beta.52",
    "rollup-plugin-babel": "^4.0.0-beta.7",
    "babel-preset-env": "^1.4.0",
    "eslint-config-rem": "^4.0.0",
    "lerna": "^3.16.4",
    "rollup": "^1.17.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-vue": "^5.0.1",
    "stylus": "^0.54.5",
    "vuepress": "^1.0.3",
    "xo": "^0.24.0",
    "vue-foldable": "^1.0.0",
    "@vue-foldable/csdn": "^1.0.0",
    "@vue-foldable/baidu": "^1.0.0",
    "@vue-foldable/weibo": "^1.0.0"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "author": "ULIVZ <chl814@foxmail.com>",
  "license": "MIT"
}
